# Environment variables for Hybrid Surveyor

# Application Configuration
APP_NAME="Hybrid Surveyor"
APP_VERSION="0.2.0"
DEBUG=false

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///hybrid_surveyor.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Google Sheets API Configuration
# Download credentials.json from Google Cloud Console and set the path here
GOOGLE_CREDENTIALS_FILE=credentials.json
# Alternative: OAuth client secrets file
# GOOGLE_CLIENT_SECRETS_FILE=client_secrets.json

# Rate limiting for Google API
GOOGLE_RATE_LIMIT_REQUESTS=100
GOOGLE_RATE_LIMIT_PERIOD=60

# Processing Configuration
PROCESSING_BATCH_SIZE=1000
PROCESSING_MAX_CONCURRENT_JOBS=5
PROCESSING_CHUNK_SIZE=10000
PROCESSING_ENABLE_DATA_VALIDATION=true
PROCESSING_VALIDATION_SAMPLE_SIZE=1000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=
LOG_MAX_FILE_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_ENABLE_STRUCTURED=true

# Monitoring Configuration
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_PORT=8080
MONITORING_HEALTH_CHECK_INTERVAL=30
MONITORING_ENABLE_TRACING=false

# Optional: Override default sheet URLs (comma-separated)
# SHEET_URLS=https://docs.google.com/spreadsheets/d/your-sheet-id/edit,https://docs.google.com/spreadsheets/d/another-sheet-id/edit
