[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    venv,
    ENV,
    env,
    build,
    dist,
    *.egg-info,
    .venv,
    .eggs,
    .tox,
    .pytest_cache,
    migrations

ignore =
    E203,
    E501,
    W503,
    E231,
    E128

per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
