# Environment variables for Surveyor application

# Database Configuration
DATABASE_URL=sqlite:///surveyor.db
DATABASE_ECHO=false

# Google Sheets API Configuration
# Download credentials.json from Google Cloud Console and set the path here
GOOGLE_CREDENTIALS_FILE=credentials.json

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=

